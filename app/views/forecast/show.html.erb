<%= render "shared/errors" %>

<%= form_with url: "/forecast", method: :get, local: true, class: "row g-3" do |form| %>
<div class="col-auto">
  <%= form.search_field :zip, "data-testid" => "forecast-search-input", class: "form-control", placeholder: "Enter a zip code" %>
</div>
<div class="col-auto">
  <%= form.submit "Get Forecast", class: "btn btn-primary" %>
</div>
<% end %>

<% if @weather.present? %>
<div data-testid="forecast-data">
<div class="card mt-5" style="width: 18rem;">
  <div class="card-header">
    Today's Weather for <%= @zip %>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">
    Current:
    <div data-testid="current-temp">
      <%= @weather.current_temp %> F
    </div>
    </li>
    <li class="list-group-item">
    Low:
    <div data-testid="min-temp">
      <%= @weather.min_temp %> F
    </div>
    </li>
    <li class="list-group-item">
    High:
    <div data-testid="max-temp">
      <%= @weather.max_temp %> F
    </div>
    </li>
  </ul>
  <% if @from_cache.present? %>
    <div data-testid="cache-indicator">
      <div class="card-footer text-body-secondary text-center">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-journal-plus" viewBox="0 0 16 16">
        <path fill-rule="evenodd" d="M8 5.5a.5.5 0 0 1 .5.5v1.5H10a.5.5 0 0 1 0 1H8.5V10a.5.5 0 0 1-1 0V8.5H6a.5.5 0 0 1 0-1h1.5V6a.5.5 0 0 1 .5-.5"/>
        <path d="M3 0h10a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2v-1h1v1a1 1 0 0 0 1 1h10a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H3a1 1 0 0 0-1 1v1H1V2a2 2 0 0 1 2-2"/>
        <path d="M1 5v-.5a.5.5 0 0 1 1 0V5h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1zm0 3v-.5a.5.5 0 0 1 1 0V8h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1zm0 3v-.5a.5.5 0 0 1 1 0v.5h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1z"/>
        </svg>
      </div>
    </div>
  <% end %>
</div>
</div>
<% end %>